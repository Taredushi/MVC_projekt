@using MVC_projekt.Controllers
@using PagedList.Mvc
@model PagedList.IPagedList<MVC_projekt.Models.LabelViewModel>
@{
    ViewBag.Title = "Search";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h2>Search Label</h2>

@Html.Partial("_SearchPartial")


@using (Html.BeginForm("Label", "Search", FormMethod.Get))
{
    <p>
        Find: @Html.TextBox("SearchString")
        <input type="submit" value="Search" name="submit" class="btn btn-default" />

    </p>
}
@if (User.Identity.IsAuthenticated)
{
    @Html.ActionLink("Save search result", "Label", new { save = true }, new { @class = "btn btn-info" })
}
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @Html.ActionLink(item.BooksNumber.ToString(), "BooksLabel", new {id = item.ID}, new {@class = "badge"})
            </td>
        </tr>
    }

</table>

<div>
    <br />
    @Html.PagedListPager(Model, page => Url.Action("Index", "BookItems", new { page }))
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
</div>