@using PagedList.Mvc
@model PagedList.IPagedList<MVC_projekt.Models.BookItem>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Partial("_SearchPartial")

@if (User.IsInRole("Admin") || User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-warning" })
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].AuthorGroups.Single(x=>x.Author.FullName != null).Author.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Category.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @foreach (var arg in item.AuthorGroups)
            {
                @Html.DisplayFor(modelItem => arg.Author.FullName)
                <br/>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.BookItemID }, new { @class = "btn btn-info" })
        </td>
        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookItemID }, new { @class = "btn btn-default" })
            </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.BookItemID }, new { @class = "btn btn-danger" })
                    </td>
        }
    </tr>
}

</table>
